{
  "name": "build-tools",
  "version": "1.0.0",
  "description": "Build tooling and configurations for ClimbCapacity",
  "type": "module",
  "license": "ISC",
  "dependencies": {
    "@climbcapacity/eslint-rules": "workspace:*",
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.49.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@typescript-eslint/rule-tester": "^8.35.0",
    "@typescript-eslint/types": "^8.35.0",
    "@typescript-eslint/utils": "^8.35.0",
    "@vitest/ui": "^2.1.5",
    "eslint": "^9.29.0",
    "tsx": "^4.20.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.5"
  },
  "scripts": {
    "dev:frontend": "vite --config vite.config.ts",
    "build:frontend": "vite build --config vite.config.ts",
    "test:e2e": "playwright test --config playwright.config.ts",
    "test:e2e:ui": "playwright test --config playwright.config.ts --ui",
    "typecheck": "tsc --noEmit --project tsconfig.typecheck.json",
    "lint": "eslint --config eslint.config.js ../",
    "lint:fix": "eslint --config eslint.config.js ../ --fix"
  }
}
