{
  "name": "climbcapacity",
  "version": "1.0.0",
  "description": "",
  "author": "Denis Lantsman <dlantsman@amplify.com>",
  "type": "module",
  "license": "ISC",
  "private": true,
  "packageManager": "yarn@4.9.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "yarn workspace build-tools dev:frontend",
    "dev:backend": "yarn workspace backend dev",
    "dev": "yarn dev:frontend & yarn dev:backend",
    "build:frontend": "yarn workspace build-tools build:frontend",
    "build:eslint-rules": "yarn workspace @climbcapacity/eslint-rules build",
    "build": "yarn build:eslint-rules && yarn build:frontend",
    "test:e2e": "yarn workspace build-tools test:e2e",
    "test:e2e:ui": "yarn workspace build-tools test:e2e:ui",
    "test": "yarn workspaces foreach -A run test",
    "lint": "yarn workspace build-tools lint",
    "lint:fix": "yarn workspace build-tools lint:fix",
    "typecheck": "yarn workspace build-tools typecheck",
    "typecheck:watch": "node scripts/typecheck-watch.js"
  }
}
